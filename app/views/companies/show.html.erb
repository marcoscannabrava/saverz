<% content_for :meta_title, "$averZ - Online Coupons for #{@company.name}" %>
<% content_for :meta_description, "Choose Coupons to pay less while buying at #{@company.name}, and support your cause!" %>

<div class="d-flex">
  <p class="align-self-center mx-3 my-auto"><%= @coupons.count %> coupons found!</p>
  <%= cl_image_tag @company.logo %>
</div>

<p class="align-self-center mx-3 my-2" style="font-size: 14px;"> Copy the Code & Click on the Link.</p>
<div class="mx-3 coupon-container">
  <% @coupons.each do |coupon| %>
    <%= render "shared/coupon_card", coupon: coupon %>
  <% end %>
</div>
