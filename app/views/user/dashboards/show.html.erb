<!-- Supported Cause  -->
<div class="container bootstrap-field-container">
  <div class="field-container d-flex">
      <div class="field-image mr-3">
        <%= cl_image_tag @field.photo, class: "card-img img-thumbnail", alt: @field.photo %>
        <a class="mt-2 btn btn-change-field" href="/">Change Field</a>
        <img src="myicon.svg" class="hvr-icon" />
      </div>
      <div class="field-description flex-grow">
        <div class="card-body">
          <h3 class="card-title">Research Field Supported:
            <br>
            <%= @field.name %></h2>
          <p class="card-text" style="font-family: 'Open Sans';">This field support studies on <%= @field.descritption.truncate(100) %></p>
        </div>
      </div>
    </div>
  </div>
</div>

