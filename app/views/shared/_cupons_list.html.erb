<div class="card">
  <div class="cupons d-flex bd-highlight mb-3">
    <div class= "discount p-2 bd-highlight">
      <p>75%OFF</p>
    </div>
    <div class= "cupon title p-2 bd-highlight">
      <h5 class="card-title">Get ${api} Discount </h5>
      <p class="card-text d-flex justify-content-between">${API coupon Description}</p>
    </div>
    <div class="button ml-auto p-2 bd-highlight">
      <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#discountModal">
      Show Discount
      </button>
    </div>
  </div>
</div>

<div class="modal fade" id="discountModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body text-center">
        <div class="icon text-danger">
          <i class="fas fa-gift"></i>
        </div>
        <div class="notice">
          <h4>Get ${api} Discount</h4>
          <p>Copy the coupon to past at the cart and save.</p>

          <p><span class="badge badge-info">${API}</span> <button type="button" class="btn btn-danger">Copy</button></p>
        </div>
        <div class="store"></div>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <%= link_to 'Go to the store', 'http://google.com', class: 'btn btn-danger', target: :blank %>
      </div>
    </div>
  </div>
</div>
