<!-- Supported Cause  -->
<div class="dashboard-head mb-5">
  <div class="row">
    <div class="col-3">
      <%= cl_image_tag @supported_choice.photo, class: "card-img img-thumbnail card-design", alt: @supported_choice.photo %>
      <div class="position-relative">
      </div>
    </div>
     <div class="col-md-7">
      <div class="supported-description">
        <h3 class="card-title mb-2"><small>You support</small><br><%= @supported_name %></h3>
        <h6 class="card-title">$120 donated through your purchases</h6>
        <p class="card-text mb-4"><%= @supported_description%></p>
        <a class="btn btn-change-field" href="/"><i class="fa fa-chevron-circle-left hvr-icon hover-bump-left"></i> &nbsp; Change Field</a>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div>

<!-- Companies here  -->

<div class="card-stores py-5">
    <div class="text-center">
      <h1 class="header1 position-relative">Buying from these stores will help research</h1>
    </div>
    <div class="card-companies-all">
      <%= render 'shared/companies_cards' %>
    </div>
</div>
