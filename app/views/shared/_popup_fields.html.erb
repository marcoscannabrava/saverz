<button type="button" class="btn" data-toggle="modal" data-target="#modal-<%= field.id %>">
  <%= cl_image_tag field.photo, class: "un-img-card" %>
</button>

<div class="modal fade" id="modal-<%= field.id  %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content field-card-modal">
      <div class="modal-body text-center">
        <div class="d-flex align-items-center">
          <div class="icon d-flex">
            <%= cl_image_tag field.photo, class: "card-img img-thumbnail", alt: field.photo %>
          </div>
          <div class="notice d-flex flex-column">
            <h4 class="pop-title">Support <%= field.name %>?</h4>
            <p class="pop-text">This field support studies on <%= field.descritption %></p>
          </div>
        </div>
        <div class="modal-footer d-flex justify-content-between">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <%= button_to "#{supported_choices_path}?field_id=#{field.id}", method: :post, class:"btn btn-danger" do %>
              Support
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
